package {{package}}.interactions;

import net.serenitybdd.screenplay.Actor;
import net.thucydides.core.annotations.Step;
import net.serenitybdd.screenplay.rest.interactions.RestInteraction;
import static net.serenitybdd.screenplay.Tasks.instrumented;
import static net.serenitybdd.screenplay.rest.abilities.CallAnApi.as;

public class Options extends RestInteraction {

    private final String resource;

    private Options(String resource) {
        this.resource = resource;
    }

    @Step("{0} execute a PUT on the resource #resource")
    @Override
    public <T extends Actor> void performAs(T actor) { rest().log().all().options(as(actor).resolve(resource)).then().log().all(); }

    public static Options to(String resource) { return instrumented(Options.class, resource); }

}